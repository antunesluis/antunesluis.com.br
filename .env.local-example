# Giscus Comments Configuration
# Get these values from https://giscus.app after configuring your repository
NEXT_PUBLIC_GISCUS_REPO=username/repository
NEXT_PUBLIC_GISCUS_REPO_ID=R_your_repo_id_here
NEXT_PUBLIC_GISCUS_CATEGORY=Announcements
NEXT_PUBLIC_GISCUS_CATEGORY_ID=DIC_your_category_id_here

# Image Upload Configuration
# Maximum size for image uploads in bytes (default: 921600 = ~900KB)
NEXT_PUBLIC_IMAGE_UPLOAD_MAX_SIZE=921600
# Directory name where images are saved after upload
IMAGE_UPLOAD_DIRECTORY=uploads
# Complete image server URL without trailing slash
IMAGE_SERVER_URL=http://localhost:3001/uploads

# JWT Authentication
# Secret key used to sign JWT tokens (generate a random strong key)
JWT_SECRET_KEY=your_jwt_secret_key_here

# Login Session Configuration
# Login expiration time (use same value in seconds and string, 86400 = 1d)
LOGIN_EXPIRATION_SECONDS=86400
LOGIN_EXPIRATION_STRING=1d
# Cookie name used for login
LOGIN_COOKIE_NAME=loginSession

# Admin Credentials
# Username for admin access
LOGIN_USER=your_username_here
# Base64 encoded bcrypt password hash
# Generate with: node -e "const bcrypt = require('bcryptjs'); const hash = bcrypt.hashSync('your_password', 10); console.log(Buffer.from(hash).toString('base64'));"
LOGIN_PASS=base64_password_hash_here

# Login Control
# Allow or disallow login (0 = No, 1 = Yes)
ALLOW_LOGIN=1
